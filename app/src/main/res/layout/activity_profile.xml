<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity"
    android:background="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/dispimg"
        android:layout_width="411dp"
        android:layout_height="247dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/prof_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_img" />

    <TextView
        android:id="@+id/prof_name"
        android:layout_width="131dp"
        android:layout_height="28dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="23dp"
        android:text="Display name"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/prof_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/prof_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="61dp"
        android:text="Default Status"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/prof_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/prof_friends"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="41dp"
        android:text="Total Friends"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/sendreq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sendreq"
        android:layout_width="194dp"
        android:layout_height="51dp"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorAccent"
        android:text="send friend request"
        app:layout_constraintBottom_toTopOf="@+id/declinereq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/declinereq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Decline friend request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>